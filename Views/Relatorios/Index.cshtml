@{
    ViewData["Title"] = "Relatórios";
    var gatinhos = ViewBag.Gatinhos as LinkedList<myMeow2.Models.Gatinho>;
    var adotantes = ViewBag.Adotantes as LinkedList<myMeow2.Models.Adotante>;
    var adotantesQueAdotaramMaisDeUmGato = ViewBag.AdotantesQueAdotaramMaisDeUmGato as LinkedList<myMeow2.Models.Adotante>;
}

<style>
    .table {
        margin-top: -10px;
    }

    h5 {
        width: 100%;
        background-color: #9494cc;
        color: white;
        padding: 5px;
        border-radius: 5px;
    }
</style>

<h2 style="color: #746cfc">Relatórios</h2>

<h5 class="mt-4">     Gatinhos Adotados</h5>
@if (gatinhos != null && gatinhos.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Sexo</th>
                <th>Cor</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var gatinho in gatinhos)
            {
                <tr>
                    <td>@gatinho.Nome</td>
                    <td>@gatinho.Sexo</td>
                    <td>@gatinho.Cor</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Nenhum gatinho adotado encontrado.</p>
}

<h5 class="mt-4">     Adotantes</h5>
@if (adotantes != null && adotantes.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Email</th>
                <th>Telefone</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var adotante in adotantes)
            {
                <tr>
                    <td>@adotante.Nome</td>
                    <td>@adotante.Email</td>
                    <td>@adotante.Telefone</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Nenhum adotante encontrado.</p>
}

@if(adotantesQueAdotaramMaisDeUmGato != null && adotantesQueAdotaramMaisDeUmGato.Count > 0)
{
    <h5 class="mt-4">     Adotantes que adotaram mais de um gato</h5>
    <table class="table">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Email</th>
                <th>Telefone</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var adotante in adotantesQueAdotaramMaisDeUmGato)
            {
                <tr>
                    <td>@adotante.Nome</td>
                    <td>@adotante.Email</td>
                    <td>@adotante.Telefone</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Nenhum adotante que adotou mais de um gato encontrado.</p>
}
